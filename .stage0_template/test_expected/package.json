{
  "name": "@agile-learning-institute/mentorhub_spa_utils",
  "version": "0.1.0",
  "type": "module",
  "description": "Reusable Vue 3 + Vuetify components, composables, and utilities",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./composables": {
      "import": "./dist/composables/index.js",
      "types": "./dist/composables/index.d.ts"
    },
    "./components": {
      "import": "./dist/components/index.js",
      "types": "./dist/components/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./cypress/commands": {
      "types": "./cypress/support/commands.ts",
      "default": "./cypress/support/commands.ts"
    }
  },
  "files": [
    "dist",
    "cypress",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src",
    "format": "prettier --write src",
    "dev": "vite --config vite.config.dev.ts",
    "cypress": "cypress open",
    "cypress:run": "cypress run",
    "patch": "npm version patch --no-git-tag-version",
    "minor": "npm version minor --no-git-tag-version",
    "major": "npm version major --no-git-tag-version",
    "build-publish": "npm install --include=dev && npm run build && npm publish"
  },
  "dependencies": {
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "@tanstack/vue-query": "^5.59.0",
    "vuetify": "^3.11.3"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue/test-utils": "^2.4.6",
    "typescript": "^5.9.2",
    "vite": "^7.2.0",
    "vitest": "^3.0.5",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.5",
    "jsdom": "^25.0.1",
    "concurrently": "^9.1.0",
    "cypress": "^15.8.0",
    "pinia": "^2.2.6",
    "@mdi/font": "^7.4.47"
  },
  "peerDependencies": {
    "vue": "^3.5.0",
    "vue-router": "^4.0.0",
    "@tanstack/vue-query": "^5.0.0",
    "vuetify": "^3.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agile-learning-institute/mentorhub_spa_utils.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}